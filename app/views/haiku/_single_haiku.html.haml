  .haiku=simple_format single_haiku.description
  .author  -  #{single_haiku.author}
  / =link_to "Show", haiku_url


  -haiku_url = single_haiku.persisted? ? "#{root_url}haiku/#{single_haiku.id}" : "#{root_url}"
  / -if single_haiku.haiku_url_cache.present?
  /   %audio{ controls: "controls"}
  /     %source{ src: single_haiku.haiku_url_cache }
