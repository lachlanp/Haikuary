!!!
%html{lang: "en"}
  %head
    %title Haikuary
    %link{href: "/favicon.png", rel: "shortcut icon"}
    %meta{property: "og:title", content: "Haikuary"}
    %meta{property: "og:site_name", content: "Haikuary"}
    %meta{property: "og:url", content: "http://haikuary.herokuapp.com"}
    %meta{content: "http://haikuary.herokuapp.com/haiku200.png", property: "og:image"}
    = csrf_meta_tags
    = stylesheet_link_tag "application", media: "all"
    = analytics_init if Rails.env.production?
  %body
    = render 'layouts/header'
    .content
      = render 'layouts/errors' unless flash.nil?
      = yield

    .footer
      = javascript_include_tag "application"
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-39606262-1', 'herokuapp.com');
        ga('send', 'pageview');
      = yield :footer
